pipeline {
    agent any
    
    environment {
        DOCKER_COMPOSE_VERSION = '2.20.2'
        PROJECT_NAME = 'docker-mysql-phpmyadmin'
        WORK_DIR = 'contenedor1'
        MAVEN_HOME = tool 'Maven'
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo '========== Clonando repositorio desde GitHub =========='
                git branch: 'main', 
                    url: 'https://github.com/lucerojlc/Docker.git'
                echo 'Repositorio clonado exitosamente'
            }
        }
        
        stage('Verify Tools') {
            steps {
                echo '========== Verificando herramientas instaladas =========='
                sh '''
                    docker --version
                    docker-compose --version
                    mvn --version
                    java -version
                '''
                echo 'Todas las herramientas est√°n instaladas correctamente'
            }
        }
        
        stage('Build Application') {
            steps {
                echo '========== Compilando aplicaci√≥n Java =========='
                sh '''
                    mvn clean compile
                '''
                echo 'Aplicaci√≥n compilada exitosamente'
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo '========== Ejecutando pruebas unitarias =========='
                sh '''
                    mvn test
                '''
                echo 'Pruebas unitarias completadas'
            }
            post {
                always {
                    // Publicar resultados de pruebas unitarias
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Code Coverage') {
            steps {
                echo '========== Generando reporte de cobertura de c√≥digo =========='
                sh '''
                    mvn jacoco:report
                '''
                echo 'Reporte de cobertura generado'
            }
            post {
                always {
                    // Publicar reporte de cobertura JaCoCo
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java',
                        exclusionPattern: '**/*Test*.class'
                    )
                    
                    // Publicar reporte HTML
                    publishHTML(target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/site/jacoco',
                        reportFiles: 'index.html',
                        reportName: 'JaCoCo Coverage Report'
                    ])
                }
            }
        }
        
        stage('Code Quality Check') {
            steps {
                echo '========== Verificando calidad de c√≥digo =========='
                sh '''
                    mvn jacoco:check || echo "Advertencia: Cobertura por debajo del umbral"
                '''
            }
        }
        
        stage('Stop Previous Containers') {
            steps {
                echo '========== Deteniendo contenedores previos =========='
                dir("${WORK_DIR}") {
                    sh '''
                        docker-compose down || true
                        docker ps -a
                    '''
                }
                echo 'Contenedores previos detenidos'
            }
        }
        
        stage('Build Docker Images') {
            steps {
                echo '========== Construyendo im√°genes Docker =========='
                dir("${WORK_DIR}") {
                    sh '''
                        docker-compose build --no-cache
                    '''
                }
                echo 'Im√°genes Docker construidas exitosamente'
            }
        }
        
        stage('Deploy Containers') {
            steps {
                echo '========== Desplegando contenedores =========='
                dir("${WORK_DIR}") {
                    sh '''
                        docker-compose up -d
                        echo "Esperando a que los contenedores est√©n listos..."
                        sleep 15
                        docker-compose ps
                    '''
                }
                echo 'Contenedores desplegados correctamente'
            }
        }
        
        stage('Integration Tests') {
            steps {
                echo '========== Ejecutando pruebas de integraci√≥n =========='
                sh '''
                    # Esperar a que MySQL est√© listo
                    echo "Esperando a que MySQL est√© disponible..."
                    sleep 10
                    
                    # Ejecutar pruebas de integraci√≥n
                    mvn verify -DskipUnitTests=true
                '''
                echo 'Pruebas de integraci√≥n completadas'
            }
            post {
                always {
                    // Publicar resultados de pruebas de integraci√≥n
                    junit '**/target/failsafe-reports/*.xml'
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo '========== Verificando salud de los contenedores =========='
                dir("${WORK_DIR}") {
                    sh '''
                        # Verificar que los contenedores est√©n running
                        if [ $(docker-compose ps -q | wc -l) -eq 0 ]; then
                            echo "Error: No hay contenedores corriendo"
                            exit 1
                        fi
                        
                        # Verificar MySQL
                        docker-compose exec -T mysql mysqladmin -uroot -proot ping || exit 1
                        
                        echo "‚úì Todos los contenedores est√°n saludables"
                    '''
                }
            }
        }
        
        stage('Show Container Logs') {
            steps {
                echo '========== Mostrando logs de los contenedores =========='
                dir("${WORK_DIR}") {
                    sh '''
                        docker-compose logs --tail=50
                    '''
                }
            }
        }
        
        stage('Generate Test Reports') {
            steps {
                echo '========== Generando reportes consolidados =========='
                sh '''
                    # Consolidar reportes de pruebas
                    mvn surefire-report:report
                    mvn site -DgenerateReports=false
                '''
            }
            post {
                always {
                    // Publicar reporte de pruebas
                    publishHTML(target: [
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/site',
                        reportFiles: 'surefire-report.html',
                        reportName: 'Test Results Report'
                    ])
                }
            }
        }
    }
    
    post {
        success {
            echo '========================================='
            echo '‚úÖ Pipeline ejecutado exitosamente'
            echo '========================================='
            echo 'MySQL disponible en: localhost:3306'
            echo 'phpMyAdmin disponible en: http://localhost:8080'
            echo 'Usuario: root'
            echo 'Contrase√±a: root'
            echo '========================================='
            echo 'üìä Reportes disponibles:'
            echo '   - JaCoCo Coverage Report'
            echo '   - Test Results Report'
            echo '========================================='
        }
        
        failure {
            echo '========================================='
            echo '‚ùå Pipeline fall√≥'
            echo '========================================='
            dir("${WORK_DIR}") {
                sh '''
                    echo "Logs de Docker Compose:"
                    docker-compose logs --tail=100 || true
                    echo ""
                    echo "Contenedores activos:"
                    docker ps -a
                '''
            }
        }
        
        unstable {
            echo '========================================='
            echo '‚ö†Ô∏è  Build inestable - Revisar pruebas'
            echo '========================================='
        }
        
        always {
            echo '========== Limpieza final =========='
            
            // Archivar artefactos importantes
            archiveArtifacts artifacts: '**/target/*.jar, **/target/site/**/*', 
                             allowEmptyArchive: true
            
            // Guardar reportes de cobertura
            archiveArtifacts artifacts: '**/target/site/jacoco/**/*', 
                             allowEmptyArchive: true
            
            echo 'Pipeline finalizado'
        }
    }
}